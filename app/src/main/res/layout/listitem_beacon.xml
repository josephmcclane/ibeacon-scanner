<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_large">

    <TextView
        android:id="@+id/textview_UUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4de4a450-5357-41a5-aa96-36fe0637c4c3"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/textview_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_alignParentRight="true"
        tools:text="-81"
        android:layout_below="@+id/textview_UUID"/>

    <ProgressBar
        android:id="@+id/progressbar_rssi"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="254"
        android:layout_below="@id/textview_rssi"
        android:layout_marginTop="@dimen/padding_medium"
        tools:progress="208"/>

</RelativeLayout>
